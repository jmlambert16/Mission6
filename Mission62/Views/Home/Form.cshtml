
@{
    ViewData["Title"] = "Add A Movie";
}

@model Mission6.Models.AddMovie

<h1>Enter your Movie</h1>

<form method="post">
    <label asp-for="Category">Category</label>
    <input id="Category" asp-for="Category" />
    <br />
    <label asp-for="Title">Title</label>
    <input id="Title" asp-for="Title" />
    <br />
    <label asp-for="Year">Year</label>
    <input id="Year" asp-for="Year" />
    <br />
    <label asp-for="Director">Director</label>
    <input id="Director" asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating</label>
    <select id="Rating" asp-for="Rating">
        <option value="G">G</option>
        <option value="G">PG</option>
        <option value="G">PG-13</option>
        <option value="G">R</option>
    </select>
    <br />
    <label asp-for="Edited">Edited</label>
    <input id="Edited" type="checkbox" asp-for="Edited" />
    <br />
    <label asp-for="Lent_To">Lent To:</label>
    <input id="Lent_To" asp-for="Lent_To" />
    <br />
    <label asp-for="Notes">Notes</label>
    <textarea rows="4" id="Notes" asp-for="Notes"></textarea>
    <br />
    <input id="Form" type="submit" value="Submit" />

    <div asp-validation-summary="All"></div>
</form>